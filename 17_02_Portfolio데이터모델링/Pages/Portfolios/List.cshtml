@page
@model _17_02_Portfolio데이터모델링.Pages.Portfolios.ListModel
@inject PortfolioServiceJsonFile PortfolioService

@{
    ViewData["Title"] = "Portfolio";
    var portfolios = PortfolioService.GetPortfolios();
}

<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        Portfolio
        @*<small>Subheading</small>*@
    </h1>

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-page="/Index">Home</a>
        </li>
        <li class="breadcrumb-item active">Portfolio</li>
    </ol>

    <div class="row">

        @foreach (var portfolio in portfolios)
        {
            <div class="col-lg-4 col-sm-6 portfolio-item">
                <div class="card h-100">
                    @*<a href="#"><img class="card-img-top img-fluid" src="@portfolio.Image" alt=""></a>*@
                    <div class="portfolio-item-image" style="background-image:url('@portfolio.Image');"></div>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="#">@portfolio.Title</a>
                        </h4>
                        <p class="card-text">@portfolio.Description</p>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary">Read More...</button>
                    </div>
                </div>
            </div>
        }

    </div>


</div>
<!-- /.container -->